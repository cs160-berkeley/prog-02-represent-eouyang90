<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/black">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:weightSum="1"
            android:id="@+id/rep_info"
            android:background="@color/lightblue">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rep_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dianne_feinstein"
                app:civ_border_width="4dp"
                app:civ_border_color="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"/>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:weightSum="1"
                android:id="@+id/right_portion"
                android:layout_toEndOf="@+id/rep_img"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="@string/rep_name"
                    android:textSize="@dimen/tw__card_font_size_medium"
                    android:textColor="@color/white"
                    android:id="@+id/rep_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/rep_party"
                    android:textColor="@color/white"
                    android:id="@+id/rep_party"
                    android:layout_below="@+id/rep_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="End Term: "
                    android:textColor="@color/white"
                    android:id="@+id/term_text"
                    android:layout_below="@+id/rep_party"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/rep_term"
                    android:textColor="@color/white"
                    android:id="@+id/rep_term"
                    android:layout_toRightOf="@id/term_text"
                    android:layout_alignBottom="@id/term_text"/>
                </RelativeLayout>
        </RelativeLayout>
        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@id/rep_info"/>
    </RelativeLayout>
</RelativeLayout>